{
    "compilerOptions": {
        "outDir": "./docs/assets/es6",
        "sourceMap": false,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "scripthost",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext"
        ]
    },
    "exclude": [
        "./node_modules",
        "./docs/assets"
    ]
}
